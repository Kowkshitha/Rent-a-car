<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">



    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="5dp">




        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:padding="5dip"
            android:background="#ffffff"
            >


            <!--  ListRow Left sied Thumbnail image -->
            <LinearLayout android:id="@+id/thumbnail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dip"
                android:layout_alignParentLeft="true"

                android:layout_marginRight="5dip">

                <ImageView
                    android:id="@+id/itemimage"
                    android:layout_width="100dip"
                    android:layout_height="100dip"
                    android:src="@mipmap/ic_arrown"
                    />

            </LinearLayout>

            <!-- Project Name-->

            <TextView
                android:id="@+id/viewcarstype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/thumbnail"
                android:layout_toRightOf="@+id/thumbnail"

                android:text="type"
                android:textColor="#040404"
                android:typeface="sans"
                android:textSize="15dip"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/viewcarsmake"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/thumbnail"
                android:layout_toRightOf="@+id/thumbnail"
                android:visibility="gone"
                android:textColor="#040404"
                android:paddingTop="20dp"
                android:text="make"
                android:typeface="sans"
                android:textSize="15dip"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/viewcarsmodel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/thumbnail"
                android:layout_toRightOf="@+id/thumbnail"
                android:paddingTop="40dp"
                android:text="model"
                android:textColor="#040404"
                android:typeface="sans"
                android:textSize="15dip"
                android:textStyle="bold"/>



            <TextView
                android:id="@+id/viewcarscolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/thumbnail"
                android:layout_toRightOf="@+id/thumbnail"
                android:paddingTop="60dp"
                android:text="color"
                android:textColor="#040404"
                android:typeface="sans"
                android:textSize="15dip"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/viewcarsyear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/thumbnail"
                android:layout_toRightOf="@+id/thumbnail"
                android:paddingTop="80dp"

                android:text="year"
                android:textColor="#040404"
                android:typeface="sans"
                android:textSize="15dip"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/viewcarslplate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/thumbnail"
                android:layout_toRightOf="@+id/thumbnail"
                android:paddingTop="100dp"
                android:text="licenceplate"
                android:textColor="#040404"
                android:typeface="sans"
                android:textSize="15dip"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/viewcarstatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/thumbnail"
                android:layout_toRightOf="@+id/thumbnail"
                android:paddingTop="120dp"
                android:text="stat"
                android:visibility="gone"
                android:textColor="#040404"
                android:typeface="sans"
                android:textSize="15dip"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/imgnext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="18dip"
                android:src="@mipmap/next"

                android:layout_marginTop="15dip"
                android:layout_alignParentRight="true"
                />


            <ImageView
                android:id="@+id/imgedit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="18dip"
                android:src="@mipmap/edit"


                android:layout_alignParentRight="true"
                />



            <ImageView
                android:id="@+id/imgdelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:textSize="18dip"
                android:src="@mipmap/delete"


                android:layout_alignParentRight="true"
                />


            <View android:id="@+id/primerdivisor"
                android:layout_height="1dp"
                android:layout_width="fill_parent"
                android:background="#9b9da0"
                android:layout_marginTop="155dip"/>









            <TextView
                android:id="@+id/tvprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="price"
                android:textSize="18dp"
                android:textColor="#FF638724"
                android:textStyle="bold"
                android:layout_alignParentRight="true"

                android:layout_marginTop="165dip"

                />


            <TextView
                android:id="@+id/test2"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="location"
                android:textStyle="bold"
                android:layout_alignParentRight="true"

                android:layout_marginTop="160dip"

                />




        </RelativeLayout>




    </android.support.v7.widget.CardView>
</LinearLayout>