<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    >


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="0dp"
            >


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EMAIL"
                android:textStyle="bold"
                android:textColor="#FF0033"
                android:padding="10dp"
                />

            <View
                android:background="#FF0033"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:paddingLeft="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:textAlignment="center"
                android:text="Please Contact by below mail"
                android:padding="3dp"
                android:textColor="#505154"
                ></TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="rentacar@gmail.com"
                    android:textColor="#505154"
                    android:textStyle="bold"
                    android:layout_weight="0.7"
                    android:padding="8dp"/>

                <ImageView
                    android:id="@+id/imageView11"
                    android:onClick="mail"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="top|right"
                    android:layout_marginRight="5dip"
                    android:layout_weight="0.01"
                    android:background="@mipmap/booking"
                    android:gravity="right" />


            </LinearLayout>



        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            >


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PHONE"
                android:textStyle="bold"
                android:textColor="#FF0033"
                android:padding="10dp"
                />

            <View
                android:background="#FF0033"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:paddingLeft="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:textAlignment="center"
                android:text="Please leave a message and we'll get back to you as soon as possible."
                android:padding="3dp"
                android:textColor="#505154"
                ></TextView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tvnumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:text="+1 (514) 974-9393"
                    android:textColor="#505154"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imgcall"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="top|right"
                    android:layout_marginRight="5dip"
                    android:layout_weight="0.01"
                    android:background="@mipmap/icphone"
                    android:gravity="right"
                    />

                <ImageView
                    android:id="@+id/imgmsg"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="top|right"
                    android:layout_marginRight="5dip"
                    android:layout_weight="0.01"

                    android:background="@mipmap/icchat"
                    android:gravity="right"
                    />

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ADDRESS"
                android:textStyle="bold"
                android:textColor="#FF0033"
                android:padding="10dp"
                />

            <View
                android:background="#FF0033"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:paddingLeft="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:textAlignment="center"
                android:text="Rent a car, Keerthana Nimmagadda, Canada"
                android:padding="3dp"
                android:textColor="#505154"
                ></TextView>




        </LinearLayout>




    </LinearLayout>


</RelativeLayout>